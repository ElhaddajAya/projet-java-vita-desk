<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox alignment="CENTER" spacing="25.0" style="-fx-padding: 30; -fx-background-color: white;" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ma.vitadesk.controller.ModifierStatutRDVController">
   <children>
      <Label style="-fx-font-size: 20px; -fx-font-weight: bold; -fx-text-fill: #0d6efd;" text="Modifier le statut du rendez-vous" />

      <VBox spacing="10">
         <Label fx:id="lblPatient" style="-fx-font-size: 16px;" />
         <Label fx:id="lblDocteur" style="-fx-font-size: 16px;" />
         <Label fx:id="lblHeure" style="-fx-font-size: 16px;" />
      </VBox>

      <Separator />

      <HBox alignment="CENTER_LEFT" spacing="20">
         <Label style="-fx-font-weight: bold; -fx-font-size: 16px;" text="Nouveau statut :" />
         <ComboBox fx:id="comboStatut" prefHeight="32.0" prefWidth="200.0" promptText="Statut" style="-fx-background-color: white; -fx-border-width: 0.2px; -fx-border-color: black; -fx-border-radius: 3px; -fx-font-size: 13px;" />
      </HBox>
      <HBox alignment="CENTER_RIGHT" maxHeight="-Infinity" prefHeight="38.0" prefWidth="323.0" spacing="20.0">
         <children>
            <Button mnemonicParsing="false" onAction="#annuler" prefHeight="45.0" prefWidth="110.0" style="-fx-background-color: #EFF2F5; -fx-background-radius: 6; -fx-border-width: 0.1px; -fx-border-color: black; -fx-border-radius: 6;" text="Annuler" textAlignment="CENTER" textFill="#575555">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#enregistrer" prefHeight="45.0" prefWidth="110.0" style="-fx-background-color: #4D93FF; -fx-background-radius: 6;" text="Enregistrer" textAlignment="CENTER" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
            <Button maxHeight="-Infinity" maxWidth="-Infinity" mnemonicParsing="false" onAction="#supprimer" prefHeight="45.0" prefWidth="110.0" style="-fx-background-color: red; -fx-background-radius: 6;" text="Supprimer" textAlignment="CENTER" textFill="WHITE">
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
               <font>
                  <Font name="System Bold" size="13.0" />
               </font>
            </Button>
         </children>
      </HBox>
   </children>
</VBox>
